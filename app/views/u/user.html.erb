<% if current_user %>
    <div id="secpxhero" class="px-4 py-5 my-5 text-center">
                <h1 id="titlehero1" class="display-5 fw-bold">My Account</h1>
                <div class="col-lg-6 mx-auto">
                <p id="herop" class="lead mb-4">My Email: <em><%= current_user.email %></em></p>
                <p id="herop" class="lead mb-4">I'm: <em><%= current_user.role %></em></p>
                <p id="herop" class="lead mb-4">My ID: <em><%= current_user.id %></em></p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <%= link_to "SignOut!", destroy_user_session_path, 'data-turbo-method': :delete,  id:"btnhero2",class:"btn btn-outline-secondary btn-lg px-4" %>
                </div>
                </div>
            </div>
<% else %>
    <div id="secpxhero" class="px-4 py-5 my-5 text-center">
                <h1 id="titlehero1" class="display-5 fw-bold">Login</h1>
                <div class="col-lg-6 mx-auto">
                <p id="herop" class="lead mb-4">Or Sign Up</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <%= link_to "Login!", new_user_session_path,  id:"btnhero2",class:"btn btn-outline-secondary btn-lg px-4" %>
                    <%= link_to "Sign Up!", new_user_registration_path,  id:"btnhero2",class:"btn btn-outline-secondary btn-lg px-4" %>
                </div>
                </div>
            </div>
<% end %>